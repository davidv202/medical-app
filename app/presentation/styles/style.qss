/* ==========================================================================
   MEDICAL PACS APPLICATION - MODERN DESIGN SYSTEM
   Design consistent cu fundal mai închis pentru toată aplicația
   ========================================================================== */

/* ==========================================================================
   1. BASE STYLES - MODERN FOUNDATION
   ========================================================================== */

QWidget {
    background-color: #e2e8f0;
    color: #1e293b;
    font-family: "Inter", "Segoe UI", "Helvetica Neue", sans-serif;
    font-size: 14px;
    selection-background-color: #667eea;
    selection-color: white;
    border: 0px;
}

QWidget:focus {
    outline: none;
}

QMainWindow {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                stop:0 #cbd5e1, stop:0.3 #e2e8f0,
                stop:0.7 #cbd5e1, stop:1 #e2e8f0);
    border: 1px solid #94a3b8;
}

/* ==========================================================================
   2. LOGIN VIEW - MODERN GLASSMORPHISM
   ========================================================================== */

/* Background pentru LoginView */
LoginView {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                stop:0 #667eea, stop:0.25 #764ba2,
                stop:0.5 #667eea, stop:0.75 #9921e8, stop:1 #f093fb);
}

/* Card principal cu glassmorphism */
QWidget#LoginCard {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(255, 255, 255, 0.95),
                stop:1 rgba(255, 255, 255, 0.88));
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 24px;
}

/* Icon medical */
QLabel#LoginIcon {
    font-size: 46px;
    color: #667eea;
    background: transparent;
    border: none;
    padding: 6px;
}

/* Title aplicație */
QLabel#LoginTitle {
    font-size: 28px;
    font-weight: 800;
    color: #2d3748;
    background: transparent;
    border: none;
    padding: 6px 0;
    letter-spacing: 1px;
}

/* Subtitle */
QLabel#LoginSubtitle {
    font-size: 13px;
    font-weight: 500;
    color: #4a5568;
    background: transparent;
    border: none;
    padding: 0 0 8px 0;
    font-style: italic;
}

/* Labels pentru inputs */
QLabel#InputLabel {
    font-size: 12px;
    font-weight: 700;
    color: #2d3748;
    background: transparent;
    border: none;
    padding: 6px 0 4px 0;
    margin: 0;
}

/* Input-uri moderne */
QLineEdit#CredentialInput {
    background: rgba(255, 255, 255, 0.85);
    border: 2px solid rgba(255, 255, 255, 0.4);
    border-radius: 12px;
    padding: 14px 18px;
    font-size: 14px;
    color: #2d3748;
    font-weight: 500;
    min-height: 18px;
}

QLineEdit#CredentialInput:focus {
    background: rgba(255, 255, 255, 0.95);
    border: 2px solid #667eea;
    outline: none;
}

QLineEdit#CredentialInput::placeholder {
    color: #a0aec0;
    font-style: italic;
    font-weight: 400;
}

/* Button de login */
QPushButton#LoginButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #667eea, stop:0.5 #764ba2, stop:1 #667eea);
    color: white;
    border: none;
    border-radius: 12px;
    padding: 16px 24px;
    font-size: 15px;
    font-weight: 700;
    min-height: 20px;
    letter-spacing: 0.5px;
}

QPushButton#LoginButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #5a67d8, stop:0.5 #6b46c1, stop:1 #5a67d8);
}

QPushButton#LoginButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #4c51bf, stop:0.5 #553c9a, stop:1 #4c51bf);
    padding: 14px 22px;
}

QPushButton#LoginButton:disabled {
    background: rgba(160, 174, 192, 0.6);
    color: rgba(160, 174, 192, 0.8);
}

/* Footer */
QLabel#LoginFooter {
    font-size: 11px;
    font-weight: 500;
    color: #4a5568;
    background: transparent;
    border: none;
    padding: 8px 0 0 0;
    font-style: italic;
}

/* ==========================================================================
   3. ADMIN VIEW - MODERN CARD DESIGN
   ========================================================================== */

/* Background general pentru AdminView */
AdminView {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                stop:0 #cbd5e1, stop:0.3 #e2e8f0,
                stop:0.7 #cbd5e1, stop:1 #e2e8f0);
}

/* Header modern pentru Admin */
QWidget#NavBar {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 rgba(255, 255, 255, 0.85),
                stop:1 rgba(248, 250, 252, 0.8));
    border: 1px solid rgba(102, 126, 234, 0.3);
    border-radius: 16px;
    padding: 20px 28px;
    margin: 12px;
}

/* Title principal Admin - stil consistent cu Login */
QLabel#AdminTitle {
    font-size: 32px;
    font-weight: 800;
    color: #2d3748;
    background: transparent;
    border: none;
    padding: 16px 0;
    letter-spacing: 1px;
    text-align: center;
}

/* User label modern în header */
QLabel#UserLabel {
    font-size: 13px;
    font-weight: 600;
    color: #374151;
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 rgba(102, 126, 234, 0.15),
                stop:1 rgba(118, 75, 162, 0.1));
    border: 1px solid rgba(102, 126, 234, 0.4);
    border-radius: 20px;
    padding: 10px 18px;
}

/* ==========================================================================
   4. PACS VIEW & MAIN APPLICATION
   ========================================================================== */

/* Background pentru MainView și EnhancedPacsView */
MainView, EnhancedPacsView {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                stop:0 #cbd5e1, stop:0.3 #e2e8f0,
                stop:0.7 #cbd5e1, stop:1 #e2e8f0);
}

/* Navigation Bar pentru aplicația principală */
QWidget#NavBar {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 rgba(255, 255, 255, 0.85),
                stop:1 rgba(248, 250, 252, 0.8));
    border: 1px solid rgba(102, 126, 234, 0.3);
    border-radius: 16px;
    padding: 16px 24px;
    margin: 8px;
}

QWidget#NavBar QLabel {
    color: #374151;
    font-size: 14px;
    font-weight: 600;
    padding-right: 20px;
    background: transparent;
    border: none;
}

/* Search Containers */
QWidget#SearchContainer {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(255, 255, 255, 0.9),
                stop:1 rgba(248, 250, 252, 0.85));
    border: 1px solid rgba(102, 126, 234, 0.3);
    border-radius: 12px;
    padding: 12px;
    margin: 4px 0;
}

QWidget#SearchableStudyList {
    background: transparent;
    border: none;
}

/* Tab Widget modern pentru aplicația principală */
QTabWidget {
    background: transparent;
    border: none;
}

QTabWidget::pane {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(255, 255, 255, 0.9),
                stop:1 rgba(248, 250, 252, 0.85));
    border: 1px solid rgba(102, 126, 234, 0.3);
    border-radius: 0px 16px 16px 16px;
    padding: 20px;
    margin-top: 2px;
}

QTabWidget QTabBar::tab {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(203, 213, 225, 0.9),
                stop:1 rgba(226, 232, 240, 0.8));
    color: #64748b;
    border: 1px solid rgba(102, 126, 234, 0.3);
    border-bottom: none;
    padding: 16px 28px;
    margin-right: 3px;
    font-size: 15px;
    font-weight: 600;
    min-width: 140px;
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
}

QTabWidget QTabBar::tab:selected {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(255, 255, 255, 0.9),
                stop:1 rgba(248, 250, 252, 0.85));
    color: #2d3748;
    border: 2px solid rgba(102, 126, 234, 0.5);
    border-bottom: 2px solid rgba(255, 255, 255, 0.9);
    margin-bottom: -2px;
    font-weight: 700;
}

QTabWidget QTabBar::tab:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(241, 245, 249, 0.95),
                stop:1 rgba(226, 232, 240, 0.9));
    color: #475569;
}

/* Section Titles - stil card modern */
QLabel#SectionTitle {
    font-size: 18px;
    font-weight: 700;
    color: #2d3748;
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 rgba(102, 126, 234, 0.15),
                stop:1 rgba(118, 75, 162, 0.08));
    border: 1px solid rgba(102, 126, 234, 0.4);
    border-radius: 12px;
    padding: 14px 20px;
    margin: 12px 0;
    letter-spacing: 0.5px;
}

/* ==========================================================================
   5. FORM INPUTS - MODERN STYLE SYSTEM
   ========================================================================== */

/* Input-uri standard cu stil modern */
QLineEdit {
    background: rgba(255, 255, 255, 0.85);
    border: 2px solid rgba(102, 126, 234, 0.25);
    border-radius: 10px;
    padding: 12px 16px;
    font-size: 14px;
    color: #2d3748;
    min-height: 18px;
    font-weight: 500;
    selection-background-color: rgba(102, 126, 234, 0.3);
}

QLineEdit:focus {
    border: 2px solid #667eea;
    background: rgba(255, 255, 255, 0.95);
    outline: none;
}

QLineEdit::placeholder {
    color: #94a3b8;
    font-style: italic;
    font-weight: 400;
}

QLineEdit#SearchInput {
    background: rgba(255, 255, 255, 0.8);
    border: 2px solid rgba(102, 126, 234, 0.3);
    border-radius: 12px;
    padding: 10px 16px;
    font-size: 13px;
    min-width: 200px;
}

QLineEdit#SearchInput:focus {
    border: 2px solid #667eea;
    background: rgba(255, 255, 255, 0.95);
}

/* Specific Input Types pentru aplicația principală */
QLineEdit#UsernameInput, QLineEdit#PasswordInput {
    min-width: 280px;
    font-weight: 500;
    background: rgba(255, 255, 255, 0.9);
    border: 2px solid rgba(102, 126, 234, 0.3);
}

/* Text Areas moderne */
QTextEdit {
    background: rgba(255, 255, 255, 0.85);
    border: 2px solid rgba(102, 126, 234, 0.25);
    border-radius: 12px;
    padding: 16px;
    font-size: 14px;
    color: #2d3748;
    selection-background-color: rgba(102, 126, 234, 0.3);
    font-family: "Inter", "Segoe UI", sans-serif;
    line-height: 1.6;
}

QTextEdit:focus {
    border: 2px solid #667eea;
    background: rgba(255, 255, 255, 0.95);
}

QTextEdit#MetadataWidget {
    background: rgba(248, 250, 252, 0.9);
    font-family: "Consolas", "Monaco", monospace;
    font-size: 12px;
    border: 2px solid rgba(102, 126, 234, 0.2);
}

QTextEdit#ResultWidget {
    min-height: 150px;
    background: rgba(255, 255, 255, 0.9);
}

/* Dropdown-uri moderne */
QComboBox {
    background: rgba(255, 255, 255, 0.85);
    border: 2px solid rgba(102, 126, 234, 0.25);
    border-radius: 10px;
    padding: 10px 14px;
    color: #2d3748;
    font-size: 14px;
    font-weight: 500;
    min-width: 150px;
    min-height: 18px;
}

QComboBox:hover {
    border: 2px solid #667eea;
    background: rgba(255, 255, 255, 0.95);
}

QComboBox::drop-down {
    border: none;
    width: 30px;
    margin-right: 8px;
}

QComboBox::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 5px solid #64748b;
    margin-right: 5px;
}

QComboBox QAbstractItemView {
    background: rgba(255, 255, 255, 0.95);
    border: 2px solid rgba(102, 126, 234, 0.3);
    border-radius: 10px;
    color: #2d3748;
    selection-background-color: rgba(102, 126, 234, 0.2);
    padding: 4px;
}

/* Special combo styles */
QComboBox#SourcePacsCombo, QComboBox#TargetPacsCombo {
    background: rgba(255, 255, 255, 0.9);
    border: 2px solid rgba(102, 126, 234, 0.5);
    border-radius: 8px;
    padding: 12px 16px;
    font-weight: 600;
    color: #2d3748;
}

QComboBox#SourcePacsCombo:hover, QComboBox#TargetPacsCombo:hover {
    background: rgba(240, 249, 255, 0.95);
    border: 2px solid #667eea;
}

/* ==========================================================================
   6. BUTTONS - MODERN GRADIENT SYSTEM
   ========================================================================== */

/* Base Button - gradient style */
QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #10b981, stop:1 #059669);
    color: white;
    padding: 12px 20px;
    font-size: 14px;
    font-weight: 600;
    border: none;
    border-radius: 10px;
    margin: 3px 2px;
    min-height: 18px;
    min-width: 100px;
}

QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #059669, stop:1 #047857);
}

QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #047857, stop:1 #065f46);
    padding: 10px 18px;
}

QPushButton:disabled {
    background: rgba(156, 163, 175, 0.6);
    color: rgba(156, 163, 175, 0.8);
}

/* Navigation Buttons */
QPushButton#NavButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #667eea, stop:1 #764ba2);
    min-width: 120px;
    min-height: 40px;
    font-weight: 700;
}

QPushButton#NavButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #5a67d8, stop:1 #6b46c1);
}

QPushButton#NavButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #4c51bf, stop:1 #553c9a);
}

/* Primary Buttons */
QPushButton#CreateButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #667eea, stop:1 #764ba2);
    font-weight: 700;
}

QPushButton#CreateButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #5a67d8, stop:1 #6b46c1);
}

/* Cancel Buttons */
QPushButton#CancelButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #6b7280, stop:1 #4b5563);
}

QPushButton#CancelButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #4b5563, stop:1 #374151);
}

/* Logout Button */
QPushButton#LogoutButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #dc2626, stop:1 #b91c1c);
    font-weight: 700;
}

QPushButton#LogoutButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #b91c1c, stop:1 #991b1b);
}

/* PACS specialized buttons */
QPushButton#PreviewButton, QPushButton#PrintButton, QPushButton#GeneratePDFButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #7c3aed, stop:1 #6d28d9);
    color: white;
    font-weight: 600;
}

QPushButton#PreviewButton:hover, QPushButton#PrintButton:hover, QPushButton#GeneratePDFButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #6d28d9, stop:1 #5b21b6);
}

QPushButton#QueueButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #059669, stop:1 #047857);
}

QPushButton#QueueButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #047857, stop:1 #065f46);
}

QPushButton#SendPACSButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #dc2626, stop:1 #b91c1c);
}

QPushButton#SendPACSButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #b91c1c, stop:1 #991b1b);
}

/* File operation buttons */
QPushButton#LoadFilesButton, QPushButton#LoadFolderButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #0891b2, stop:1 #0e7490);
    color: white;
}

QPushButton#LoadFilesButton:hover, QPushButton#LoadFolderButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #0e7490, stop:1 #155e75);
}

QPushButton#ClearButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #dc2626, stop:1 #b91c1c);
    color: white;
}

QPushButton#ClearButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #b91c1c, stop:1 #991b1b);
}

/* Small utility buttons */
QPushButton#ClearSearchButton {
    background: rgba(203, 213, 225, 0.8);
    color: #64748b;
    border: 1px solid rgba(102, 126, 234, 0.3);
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    padding: 6px 8px;
    margin: 0;
    min-height: 24px;
    max-height: 28px;
    min-width: 24px;
    max-width: 28px;
}

QPushButton#ClearSearchButton:hover {
    background: rgba(156, 163, 175, 0.9);
    color: #475569;
    border: 1px solid rgba(102, 126, 234, 0.5);
}

QPushButton#ClearSearchButton:pressed {
    background: rgba(107, 114, 128, 0.8);
    color: #1e293b;
}

/* Restart Button */
QPushButton#RestartButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #f59e0b, stop:1 #d97706);
    color: white;
    font-weight: 600;
    padding: 12px 24px;
    border-radius: 10px;
    font-size: 14px;
}

QPushButton#RestartButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #d97706, stop:1 #b45309);
}

/* ==========================================================================
   7. LISTS & TABLES - MODERN CARD STYLE
   ========================================================================== */

/* List Widgets moderne */
QListWidget {
    background: rgba(255, 255, 255, 0.85);
    border: 2px solid rgba(102, 126, 234, 0.25);
    border-radius: 12px;
    padding: 8px;
    alternate-background-color: rgba(248, 250, 252, 0.6);
    gridline-color: rgba(102, 126, 234, 0.1);
    outline: none;
}

QListWidget#StudyList {
    min-width: 600px;
    min-height: 400px;
    font-size: 14px;
    background: rgba(255, 255, 255, 0.9);
}

QListWidget#StudyList::item {
    padding: 12px 16px;
    margin: 2px 0;
    color: #2d3748;
    background: rgba(255, 255, 255, 0.8);
    border: 1px solid rgba(203, 213, 225, 0.5);
    border-radius: 8px;
    min-height: 20px;
}

QListWidget#StudyList::item:selected {
    background: rgba(102, 126, 234, 0.2);
    color: #1e40af;
    border: 1px solid rgba(102, 126, 234, 0.5);
    font-weight: 600;
}

QListWidget#StudyList::item:hover {
    background: rgba(240, 249, 255, 0.9);
    border: 1px solid rgba(102, 126, 234, 0.3);
}

QListWidget#QueueList {
    min-height: 100px;
    max-height: 150px;
    background: rgba(255, 255, 255, 0.8);
}

QListWidget#QueueList::item {
    padding: 8px 12px;
    margin: 1px 0;
    font-size: 12px;
    min-height: 15px;
    background: rgba(248, 250, 252, 0.8);
}

/* Table moderne cu glassmorphism */
QTableWidget {
    background: rgba(255, 255, 255, 0.85);
    border: 2px solid rgba(102, 126, 234, 0.25);
    border-radius: 12px;
    gridline-color: rgba(102, 126, 234, 0.15);
    selection-background-color: rgba(102, 126, 234, 0.2);
    alternate-background-color: rgba(248, 250, 252, 0.6);
}

QTableWidget::item {
    padding: 12px 16px;
    border-bottom: 1px solid rgba(102, 126, 234, 0.1);
    color: #2d3748;
    font-weight: 500;
}

QTableWidget::item:selected {
    background: rgba(102, 126, 234, 0.2);
    color: #1e40af;
    font-weight: 600;
    border: 0px solid transparent;
    outline: none;
}

QHeaderView::section {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(203, 213, 225, 0.9),
                stop:1 rgba(226, 232, 240, 0.8));
    color: #475569;
    padding: 14px 16px;
    border: 1px solid rgba(102, 126, 234, 0.3);
    font-weight: 700;
    font-size: 13px;
}

QHeaderView::section:first {
    border-top-left-radius: 10px;
}

QHeaderView::section:last {
    border-top-right-radius: 10px;
}

/* ==========================================================================
   8. GROUP BOXES - MODERN CARDS
   ========================================================================== */

QGroupBox {
    font-weight: 600;
    font-size: 15px;
    color: #2d3748;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(255, 255, 255, 0.9),
                stop:1 rgba(248, 250, 252, 0.85));
    border: 2px solid rgba(102, 126, 234, 0.25);
    border-radius: 12px;
    margin-top: 16px;
    padding-top: 16px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 16px;
    padding: 0 12px 0 12px;
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 rgba(102, 126, 234, 0.15),
                stop:1 rgba(118, 75, 162, 0.08));
    border: 1px solid rgba(102, 126, 234, 0.4);
    border-radius: 6px;
    color: #2d3748;
    font-weight: 700;
}

/* ==========================================================================
   9. SCROLLBARS - MODERN STYLE
   ========================================================================== */

QScrollBar:vertical {
    background: rgba(203, 213, 225, 0.6);
    width: 10px;
