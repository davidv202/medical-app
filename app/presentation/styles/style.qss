QScrollBar::add-line, QScrollBar::sub-line {
    background: none;
    border: none;
    width: 0;
    height: 0;
}

QScrollBar::corner {
    background: rgba(241, 245, 249, 0.8);
    border-radius: 5px;
}

/* ==========================================================================
   9. PROGRESS BARS - MODERN
   ========================================================================== */

QProgressBar {
    background: rgba(241, 245, 249, 0.9);
    border: 2px solid rgba(102, 126, 234, 0.2);
    border-radius: 8px;
    text-align: center;
    color: #2d3748;
    font-weight: 600;
    height: 20px;
}

QProgressBar::chunk {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #667eea, stop:1 #764ba2);
    border-radius: 6px;
    margin: 2px;
}

/* ==========================================================================
   END OF MODERN DESIGN SYSTEM
   ========================================================================== */